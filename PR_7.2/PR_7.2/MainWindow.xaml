<Window x:Class="PR_7._2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR_7._2"
        mc:Ignorable="d"
        Title="Practical work № 7.2" Height="150" Width="500"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="298*"/>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="173*"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button Content="Input" Margin="1,9,0,2" Click="btnInput_Click"/>
            <Button Content="Result" Margin="1,10,0,2" Click="btnResult_Click"/>
            <Button Content="Exit" Margin="1,11,0,2" Click="btnExit_Click"/>
        </StackPanel>
        <StackPanel Grid.ColumnSpan="3" Grid.Column="1">
            <Image x:Name="ImageMan" Height="129" Width="108" Source="/pngMan.png"/>
        </StackPanel>
    </Grid>
</Window>